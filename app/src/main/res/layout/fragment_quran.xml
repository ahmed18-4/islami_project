<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.QuranFragment"
    android:layout_margin="7dp"
    >
<ImageView
    android:id="@+id/quran_logo"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:src="@drawable/quran_logo_frag"
    android:adjustViewBounds="true"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
/>
    <View
        android:id="@+id/guide_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/quran_logo"
        android:background="@color/darkGold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:outlineAmbientShadowColor="@color/white"
        />
    <TextView
        android:id="@+id/sura_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chapter_name"
        app:layout_constraintTop_toBottomOf="@id/guide_one"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="28sp"
        />
    <View
        android:id="@+id/guide_teo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/sura_names"
        android:background="@color/darkGold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:outlineAmbientShadowColor="@color/white"
        />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chapter_name_rec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/guide_teo"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/cahpter_name_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>