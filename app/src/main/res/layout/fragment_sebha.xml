<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SebhaFragment"
    android:layout_margin="40dp"
    >


   <ImageView
      android:id="@+id/sebha_body"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:src="@drawable/sebha_body_ic"
      android:adjustViewBounds="true"
      android:layout_marginTop="73dp"
 app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
/>
   <ImageView
       android:id="@+id/sebha_head"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/sebha_head_ic"
       android:adjustViewBounds="true"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />
   <TextView
      android:id="@+id/sebha_tv_counter"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:textSize="32sp"
      android:layout_marginTop="100dp"
      android:padding="10dp"
      android:background="@color/primrGold"
      android:textColor="@color/white"
       app:layout_constraintTop_toBottomOf="@id/sebha_body"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="33"/>
   <TextView
       android:id="@+id/dowaa_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:textSize="32sp"
      android:background="@color/primrGold"
      android:textColor="@color/white"
      android:layout_marginTop="50dp"
      android:padding="10dp"
app:layout_constraintTop_toBottomOf="@id/sebha_tv_counter"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="سبحان الله"/>

</androidx.constraintlayout.widget.ConstraintLayout>