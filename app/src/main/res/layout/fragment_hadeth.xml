<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HadethFragment"

    >


    <ImageView
    android:id="@+id/hadeth_logo"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:src="@drawable/hadeth_logo"
    android:adjustViewBounds="true"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
    <View
        android:id="@+id/guide_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/hadeth_logo"
        android:background="@color/darkGold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:outlineAmbientShadowColor="@color/white"
        />
    <TextView
        android:id="@+id/hadeth_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hadith name"
        app:layout_constraintTop_toBottomOf="@id/guide_one"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="28sp"
        />
    <View
        android:id="@+id/guide_teo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/hadeth_names"
        android:background="@color/darkGold"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:outlineAmbientShadowColor="@color/white"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hadeth_name_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/guide_teo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/cahpter_name_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>